model Order {
  id       String @id @default(uuid(4))
  orderUid String

  fullName String @default("Anonym")
  email   String
  phone   String
  address String
  lat     Int
  lng     Int

  totalCents          Int
  clientTz            String
  clientOffsetMinutes Int

  shop   Shop   @relation(fields: [shopId], references: [id])
  shopId String

  createdAt DateTime @default(now())

  items OrderItem[]
}
